<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/padding_tiny"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar"
        android:layout_width="@dimen/avater_size"
        android:layout_height="@dimen/avater_size"
        android:layout_marginRight="@dimen/spacing_small"
        android:src="@drawable/avatar_ph"
        app:civ_border_color="@color/gray_light"
        app:civ_border_width="@dimen/border_size"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_avatar"
        android:layout_alignTop="@id/img_avatar"
        android:textSize="@dimen/font_normal"
        tools:text="lucky yin" />

    <TextView
        android:id="@+id/tv_last_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_avatar"
        android:layout_alignBottom="@id/img_avatar"
        android:textSize="@dimen/font_small"
        tools:text="178以下勿扰" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/font_small"
        tools:text="2016-04-25"
        />
</RelativeLayout>