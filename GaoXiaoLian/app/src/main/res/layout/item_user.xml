<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_container"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        android:src="@drawable/avatar_ph"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:background="#FFFFFF"
        />

    <TextView
        android:id="@+id/tx_name"
        android:background="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@id/img_avatar"
        android:layout_alignTop="@id/img_avatar"
        android:textSize="25sp"
        tools:text="lucky yin"
        />

    <TextView
        android:id="@+id/tx_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tx_name"
        android:layout_alignBottom="@id/tx_name"
        android:textSize="10sp"
        tools:text="15"
        />

    <TextView
        android:id="@+id/tx_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_below="@id/tx_name"
        android:layout_toRightOf="@id/img_avatar"
        tools:text="研究生"
        />

    <TextView
        android:id="@+id/tx_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tx_name"
        android:layout_toRightOf="@id/tx_status"
        tools:text="华中科技大学"
        />

    <TextView
        android:id="@+id/tx_motto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_avatar"
        android:layout_toRightOf="@id/img_avatar"
        android:textSize="15dp"
        tools:text="178以下勿扰"
        />

    <TextView
        android:id="@+id/tx_appear_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/img_avatar"
        android:textSize="10dp"
        tools:text="几秒前"
        />

    <ImageView
        android:id="@+id/img_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>